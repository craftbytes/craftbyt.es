---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Not found" description="Page not found">
  <section class="min-h-screen bg-craftbytes-blue-light flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-6xl font-bold text-white mb-4">404</h1>
      <h2 class="text-2xl font-semibold text-white mb-4">Page not found</h2>
      <p class="text-white mb-6">The page you are looking for doesn't exist.</p>
      <a href="/" class="bg-white text-craftbytes-blue px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">Go Home</a>
    </div>
  </section>
</Layout>